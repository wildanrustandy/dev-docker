// ini adalah contoh launch.json untuk menghubungkan debugger VSCode ke Odoo yang berjalan di dalam Docker
// copy file ini ke dalam folder .vscode di project, contoh: equip/.vscode/launch.json

{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Attach to Odoo Docker",
            "type": "python",
            "request": "attach",
            "justMyCode": false,
            "connect": {
                "host": "localhost",
                "port": 5678
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}",
                    "remoteRoot": "/Users/wildanrustandy/dev/equip"
                }
            ],
            "preLaunchTask": "docker-compose-up-debug",
            "postDebugTask": "docker-compose-down"
        },
        {
            "name": "Run Odoo Native",
            "type": "debugpy",
            "request": "launch",
            "stopOnEntry": false,
            "console": "integratedTerminal",
            "python": "/Users/wildanrustandy/venv/venv/bin/python",
            "program": "/Users/wildanrustandy/dev/equip/odoo-bin",
            "args": [
                "--config=/Users/wildanrustandy/config/odoo14_wms.conf",
                "--dev=xml"
            ]
        }
    ]
}